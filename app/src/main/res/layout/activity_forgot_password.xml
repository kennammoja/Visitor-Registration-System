<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="292dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toTopOf="@+id/reset_password"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kws_background"
        tools:layout_editor_absoluteX="46dp" />

    <TextView
        android:id="@+id/email_account"
        android:layout_width="283dp"
        android:layout_height="37dp"
        android:text="example@kws.com"
        android:textAlignment="center"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="272dp" />

    <TextView
        android:id="@+id/reset_password"
        android:layout_width="283dp"
        android:layout_height="34dp"
        android:text="Enter email to reset password"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="216dp" />

    <Button
        android:id="@+id/submit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="331dp" />

    <Button
        android:id="@+id/reset_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="639dp"
        android:text="HOME"/>

</androidx.constraintlayout.widget.ConstraintLayout>